<h1>Friends</h1>
 
 
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag search_friend_path, method: :get, local: true, data: { turbo: false } do  %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "name or email", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><strong>Actions: </strong> <%= link_to "View Profile", user_path(friend),
                              class: "btn btn-sm btn-success ms-3" %>
              <% if current_user.not_friends_with?(friend.id) %>

                <%= link_to 'Follor friends?', friendships_path(friend: @friend ),
                              class: "btn btn-sm btn-success ms-3", data: { turbo_method: :post } %>

              <% else %>
                <span class="badge badge-secondar">
                  You are friends
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= render partial: 'friends/list' %>

