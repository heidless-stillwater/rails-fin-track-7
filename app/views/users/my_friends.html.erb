<h1>Friends</h1>
 
 
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag search_friend_path, method: :get, local: true, data: { turbo: false } do  %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "name or email", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @friend %>
  <% #debugger %>
  <div class="card card-header results-block mt-3 col-9">
    <strong>email:</strong> <%= @friend.email %>
    <strong>first name:</strong> <%= @friend.first_name %>
    <strong>last name:</strong> <%= @friend.last_name %>

    <%= link_to 'Add 2 Friends', friendships_path(user: current_user, friend: @friend ),
                              class: "btn btn-sm btn-success ms-3", data: { turbo_method: :post } %>
  </div>
<% end %>

<%= render partial: 'friends/list' %>

